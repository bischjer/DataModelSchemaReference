{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "description": "Network node",
    "type": "object",    
    "title": "Network Node",
    "properties": {
        "role": {
            'type': 'string',
            'allowed': ["client", "server", "peer"],
            'required': True
        },
        "interfaces": [
            {
                "network_interface_controller": {
                    "ipv4": "string",
                    "ipv6": "string",
                    "mac": "string",
                    "connection": {
                        "type": "string",
                        'allowed': ["ethernet", "wi-fi", "fibre-channel",
                                    "atm", "fddi", "Token-ring"],
                        'required': True
                    }
                }
            }
        ],
        "speeds": {
            "type": "list",
            "default": [10,100,1000]
        }
    }
}
